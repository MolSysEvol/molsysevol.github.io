  keywords = {Phylogeny, Time Factors, Humans, Bayes Theorem, Evolution, Molecular, Amino Acid Sequence, Proteomics, Models, Biological, Geography, Adaptation, Biological, Drug Resistance, Multiple, Viral, Genetic Speciation, HIV Infections, HIV-1, Virus Internalization},
