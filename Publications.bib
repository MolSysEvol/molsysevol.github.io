  journal  = {PLoS Pathogens},
  title    = {The {WOPR} {Protein} {Ros1} {Is} a {Master} {Regulator} of {Sporogenesis} and {Late} {Effector} {Gene} {Expression} in the {Maize} {Pathogen} {Ustilago} maydis},
