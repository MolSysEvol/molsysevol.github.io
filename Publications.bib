  keywords   = {Models, Genetic, Phylogeny, Sequence Alignment, Evolution, Molecular, Amino Acid Sequence, Animals, Markov Chains, Plant Proteins, Amino Acid Substitution, Cluster Analysis, RNA, Ribosomal, RNA, Bacterial, Aminopeptidases, Methionyl Aminopeptidases, Myoglobin, Protein Kinases},
  pmid       = {18053141},
  shorttitle = {Detecting groups of coevolving positions in a molecule},
}

@article{dutheil_detecting_2012,
	title = {Detecting coevolving positions in a molecule: why and how to account for phylogeny},
	volume = {13},
